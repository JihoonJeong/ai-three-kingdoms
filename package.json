{
  "name": "ai-three-kingdoms",
  "version": "1.0.0",
  "description": "AI 삼국지 — AI 책사와 함께하는 전략 게임",
  "type": "module",
  "main": "dist/core/engine/game-state.js",
  "scripts": {
    "start": "tsx scripts/start.ts",
    "build": "tsc",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "dev:web": "vite --config web/vite.config.ts",
    "dev:server": "tsx watch server/index.ts",
    "build:web": "vite build --config web/vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "sim": "tsx sim/run-batch.ts",
    "sim:quick": "tsx sim/run-batch.ts --quick",
    "sim:dry": "tsx sim/run-batch.ts --dry --quick"
  },
  "keywords": [
    "three-kingdoms",
    "strategy",
    "mcp",
    "ai"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@hono/node-server": "^1.19.9",
    "hono": "^4.11.9"
  }
}
